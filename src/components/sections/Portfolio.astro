---
import Project from "../Project.astro";
import { Icon } from "astro-icon/components";

// Import all project images
import diversiaImg from "../../assets/projects/diversia.webp";
import dualizaImg from "../../assets/projects/dualiza.ieshlanz.es.webp";
import nokenImg from "../../assets/projects/noken_vocabulary.webp";
import illustratorImg from "../../assets/projects/illustrator_web.png";
import saasImg from "../../assets/projects/saas-blog-nextjs.vercel.app.webp";
import portfolioImg from "../../assets/projects/rogerciv-portfolio.webp";
import rentalImg from "../../assets/projects/rental-cars-test.vercel.app.webp";

interface Project {
  imageUrl: ImageMetadata;
  title: string;
  type: string;
  link: string;
  tech?: string[];
}

const projects: Project[] = [
  {
    imageUrl: diversiaImg,
    title: "Diversia Interiorismo",
    type: "Website",
    link: "https://www.diversiainteriorismo.com",
    tech: [
      "Nextjs",
      "Tailwindcss",
      "Prisma",
      "Mongodb",
      "Cloudflare",
      "Vercel",
    ],
  },
  {
    imageUrl: dualizaImg,
    title: "Dualiza",
    type: "Website",
    link: "https://dualiza.ieshlanz.es",
    tech: ["React", "Tailwindcss", "Threejs"],
  },
  {
    imageUrl: nokenImg,
    title: "Noken Vocabulary",
    type: "Website",
    link: "https://noken-vocabulary.vercel.app",
    tech: ["React", "Tailwindcss", "Supabase", "react-router"],
  },
  {
    imageUrl: illustratorImg,
    title: "Illustrator Amelia",
    type: "Website",
    link: "https://noken-vocabulary.vercel.app",
    tech: ["Astro", "Tailwindcss"],
  },
  {
    imageUrl: saasImg,
    title: "SASS Blog",
    type: "Website SASS",
    link: "https://saas-blog-nextjs.vercel.app",
    tech: ["Nextjs", "Tailwindcss", "Prisma", "Stripe", "Supabase"],
  },
  {
    imageUrl: portfolioImg,
    title: "Portfolio Nextjs",
    type: "Portfolio",
    link: "https://rogerciv.vercel.app",
    tech: ["Nextjs", "Tailwindcss"],
  },
  {
    imageUrl: rentalImg,
    title: "Rental Cars",
    type: "Website",
    link: "https://rental-cars-test.vercel.app",
    tech: ["Nextjs", "Tailwindcss", "Prisma", "Stripe", "Uploadthing"],
  },
];
---

<section class="bg-background">
  <div class="container px-6 py-32 sm:py-10 mx-auto">
    <h1 class="text-3xl font-semibold text-center capitalize lg:text-4xl">
      Portfolio
    </h1>

    <p class="mt-4 text-center text-offset">
      Descubra algunos de los proyectos en los que he trabajado recientemente.
      Para ver el código y explorar más de mi trabajo, visite mi
      <a
        href="https://github.com/rogerciv"
        target="_blank"
        rel="noopener noreferrer"
        class="text-primary hover:opacity-80 inline-flex items-center"
      >
        <span>GitHub</span>
        <Icon name="Github" class="size-5 inline-block ml-1" />
      </a>
    </p>

    <div
      class="grid grid-cols-1 gap-8 mt-8 xl:mt-12 xl:gap-12 md:grid-cols-2 xl:grid-cols-3"
    >
      {
        projects.map((project) => (
          <Project
            imageUrl={project.imageUrl}
            title={project.title}
            type={project.type}
            link={project.link}
            tech={project.tech}
          />
        ))
      }
    </div>
  </div>
</section>
